<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.theatertickets.jarno.theatertickets.AdminNavigation">

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Add movies"
        android:id="@+id/addMoviesButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />


    <ListView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/movieList"
        android:layout_alignParentStart="true"
        android:longClickable="false"

        android:layout_below="@+id/deleteMovie"
        android:layout_toStartOf="@+id/deletePerson" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/peopleList"
        android:layout_alignTop="@+id/movieList"
        android:layout_toEndOf="@+id/movieList" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Delete movie"
        android:id="@+id/deleteMovie"
        android:layout_below="@+id/addMoviesButton"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Delete person"
        android:id="@+id/deletePerson"
        android:layout_below="@+id/addMoviesButton"
        android:layout_alignParentEnd="true"
        android:textSize="20dp" />

</RelativeLayout>
